<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/colorAccent"
	android:orientation="vertical">

	<TextView
		android:id="@+id/tv_compress_video_size"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_margin="15dp"
		android:text="输入文件大小：12M"
		android:textColor="@android:color/white"
		android:textSize="20sp"/>

	<View
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:background="@android:color/white"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_margin="15dp"
		android:text="视频压缩"
		android:textColor="@android:color/white"
		android:textSize="20sp"/>

	<org.florescu.android.rangeseekbar.RangeSeekBar
		android:id="@+id/rsb_comprose_video"
		xmlns:rsb="http://schemas.android.com/apk/res-auto"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginBottom="15dp"
		android:layout_marginTop="-15dp"
		rsb:absoluteMaxValue="100"
		rsb:absoluteMinValue="0"
		rsb:activeColor="@android:color/white"
		rsb:barHeight="2dp"
		rsb:defaultColor="@android:color/white"
		rsb:showLabels="false"
		rsb:singleThumb="true"
		rsb:thumbDisabled="@drawable/sound_custom_slider_thumb"
		rsb:thumbNormal="@drawable/sound_custom_slider_thumb"
		rsb:thumbPressed="@drawable/sound_custom_slider_thumb"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="45dp"
		android:layout_marginBottom="20dp"
		android:layout_marginTop="15dp"
		android:orientation="horizontal"
		android:paddingLeft="20dp"
		android:paddingRight="20dp">

		<TextView
			android:id="@+id/tv_compress_cancel"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_marginRight="20dp"
			android:layout_weight="1"
			android:background="@drawable/ic_watermark_bg"
			android:gravity="center"
			android:text="取消"
			android:textColor="@android:color/white"
			android:textSize="20sp"/>

		<TextView
			android:id="@+id/tv_compress_ok"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:background="@drawable/ic_watermark_bg"
			android:gravity="center"
			android:text="确定"
			android:textColor="@android:color/white"
			android:textSize="20sp"/>
	</LinearLayout>
</LinearLayout>